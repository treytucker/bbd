<div class="posts-container">
<div class="first-post">
	<div class="topper"></div>
		<div class="content-header">
			<img class="page-header" src="/images/good-reads-title.jpg"/>
		</div>
	<div class="bottom"></div>
		<div class="post-content">

<% if @posts.empty? %>
	<p>No Posts. Please check back soon. </p>
<% else %>

	<%= paginate @posts %>

	<% @posts.each do |f| %>

	<div class="regular-post">
		<div class="topper"></div>
		<div class="post-content">
		<h2><%= f.title %></h2>
		<div class="post-details">
			<p class="post-date"><%= special_date(f.created_at) %>&nbsp;&nbsp;|&nbsp;&nbsp;<p>
			<%= link_to "#{f.category.name}", :action => "show_categories", :id => f.category.name %><br>
		</div>


		<div class="post-text"> <%= shorten(f.post.html_safe) %> </div><br><br>

		<%= link_to "Read More", good_read_path(f.id), :class => 'read-more-link full-width-clearer' %>
		</div>
		<div class="bottom"></div>
	</div>

	<% end %>
<% end %>
</div>
</div>
</div>
</div>
