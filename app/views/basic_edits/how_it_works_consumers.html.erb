	</div>
	<div class="hiw-consumer-text">
		<h2><%= f.text_field :header_2, :class => "edit-input" %></h2>
		<%= f.label :content_2, "Content_2" %>
		<%= f.text_area :content_2, :class => 'mceEditor' %>
	</div>
	<div class="hiw-consumer-text">
		<h2><%= f.text_field :header_3, :class => "edit-input" %></h2>
		<%= f.label :content_3, "Content_3" %>
		<%= f.text_area :content_3, :class => 'mceEditor' %>
	</div>
	<div class="hiw-consumer-text">
		<h2><%= f.text_field :header_4, :class => "edit-input" %></h2>
		<%= f.label :content_4, "Content_4" %>
		<%= f.text_area :content_4, :class => 'mceEditor' %>
	</div>
<%= f.submit "Save", :disable_with => 'Saving...', :class => "edit-submit" %>

<% end -%>

	
</div>
